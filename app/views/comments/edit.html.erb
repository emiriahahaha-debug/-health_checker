<div class="app-bg min-h-screen py-12">
  <div class="app-container max-w-2xl mx-auto">
    
    <div class="bg-white p-8 rounded-3xl shadow-sm border border-gray-100">
      <h1 class="text-3xl font-bold mb-8 text-center">コメントを編集✏️</h1>

      <%= form_with(model: @comment, local: true) do |f| %>
        <div class="mb-6">
          <%= f.label :body, "内容", class: "block text-gray-700 font-bold mb-2" %>
          <%= f.text_area :body, 
                rows: 5, 
                class: "w-full p-4 border border-gray-200 rounded-2xl focus:ring-2 focus:ring-yellow-400 focus:border-transparent outline-none transition" %>
        </div>

        <div class="flex flex-col gap-4">
          <%= f.submit "更新する ✨", class: "app-button w-full" %>
          
          <%= link_to "戻る", :back, 
                class: "text-center text-gray-500 hover:text-gray-700 font-medium py-2" %>
        </div>
      <% end %>
    </div>

  </div>
</div>