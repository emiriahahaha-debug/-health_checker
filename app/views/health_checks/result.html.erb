<div class="app-bg">
  <div class="app-container text-center text-lg">

    <!-- タイトル -->
    <h1 class="text-4xl font-bold mb-12">
      診断結果
    </h1>

    <!-- レベル色分け -->
    <% level_color =
      case @level
      when "高" then "text-green-600"
      when "中" then "text-yellow-500"
      else "text-red-500"
      end
    %>

    <!-- レベル表示 -->
    <div class="mb-10">
      <p class="text-2xl font-semibold text-gray-800 mb-4">
        あなたの健康レベルは
      </p>
      <p class="text-7xl font-extrabold <%= level_color %>">
        <%= @level %>
      </p>
    </div>

    <!-- メッセージ -->
    <p class="text-2xl font-semibold text-gray-800 mb-14">
      <%= @message %>
    </p>

    <!-- もう一度診断 -->
    <%= link_to "もう一度診断する",
      question1_health_checks_path,
      class: "app-button" %>

  </div>
</div>
